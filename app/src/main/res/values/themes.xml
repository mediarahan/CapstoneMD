<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CapstoneMD" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <style name="Theme.CapstoneMD" parent="Base.Theme.CapstoneMD" />

    <style name="Theme.CapstoneMD.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CapstoneMD.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CapstoneMD.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>